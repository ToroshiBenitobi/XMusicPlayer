<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline4"
                                                android:orientation="vertical"
                                                app:layout_constraintGuide_percent="0.19"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline5"
                                                android:orientation="vertical"
                                                app:layout_constraintGuide_percent="0.85"/>

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" tools:srcCompat="@tools:sample/avatars" android:id="@+id/itemStandardImage"
            app:layout_constraintEnd_toStartOf="@+id/guideline4"
            android:layout_marginEnd="2dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="5dp"
            android:layout_marginStart="2dp" android:layout_marginTop="2dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="239dp"
            android:layout_height="30dp" android:id="@+id/itemStandardTitle"
            android:textSize="24sp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/itemStandardText"
            app:layout_constraintStart_toStartOf="@+id/guideline4" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline5" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="TextView"
            android:layout_width="237dp"
            android:layout_height="20dp" android:id="@+id/itemStandardText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itemStandardTitle"
            app:layout_constraintStart_toStartOf="@+id/itemStandardTitle"/>
    <Button
            android:layout_width="31dp"
            android:layout_height="29dp" android:id="@+id/itemStandardMenu"
            style="@style/Widget.Material3.Button.Icon" android:text="..."
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="@+id/guideline5"/>
</androidx.constraintlayout.widget.ConstraintLayout>