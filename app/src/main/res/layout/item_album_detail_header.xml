<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:background="@color/app_shortcut_default_foreground">
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline6"
                                                android:orientation="vertical"
                                                app:layout_constraintGuide_begin="29dp"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline8"
                                                android:orientation="vertical"
                                                app:layout_constraintGuide_begin="162dp"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline7" app:layout_constraintGuide_begin="16dp"
                                                android:orientation="horizontal"/>
    <ImageView
            android:layout_width="133dp"
            android:layout_height="131dp" app:srcCompat="@drawable/default_album_art" android:id="@+id/albumDetailView"
            app:layout_constraintTop_toTopOf="@+id/guideline7"
            android:layout_marginTop="12dp" app:layout_constraintStart_toStartOf="@+id/guideline6"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline9" app:layout_constraintGuide_begin="169dp"
                                                android:orientation="horizontal"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_access_time_white_24dp"
            android:id="@+id/imageView4"
            app:layout_constraintStart_toStartOf="@+id/guideline8"
            android:layout_marginStart="44dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="19dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_music_note_white_24dp"
            android:id="@+id/imageView3"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/imageView4"
            app:layout_constraintStart_toStartOf="@+id/imageView4" app:layout_constraintEnd_toEndOf="@+id/imageView4"
            app:layout_constraintHorizontal_bias="0.0"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_person_white_24dp"
            android:id="@+id/imageView2"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView3" app:layout_constraintStart_toStartOf="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="@+id/imageView3" app:layout_constraintTop_toTopOf="@+id/guideline7"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/albumDetailArtist"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            android:textColor="@color/app_shortcut_default_background"
            app:layout_constraintStart_toEndOf="@+id/imageView2" android:layout_marginStart="16dp"
            android:layout_marginBottom="4dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/albumDetailCount"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3"
            app:layout_constraintStart_toStartOf="@+id/albumDetailArtist"
            android:textColor="@color/app_shortcut_default_background" android:layout_marginBottom="4dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/albumDetailDuration"
            app:layout_constraintBottom_toBottomOf="@+id/imageView4"
            android:textColor="@color/app_shortcut_default_background"
            android:layout_marginBottom="4dp"
            app:layout_constraintStart_toStartOf="@+id/albumDetailCount"/>
</androidx.constraintlayout.widget.ConstraintLayout>